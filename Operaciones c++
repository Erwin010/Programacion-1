#include<stdio.h>

int main()
{
	float a;
	float b;
	float c;
	float d;
	float e;
	float f;
	float g;
	printf("Ingrese el primer numero:\n");
	scanf("%f",&a);
	printf("Ingrese el segundo numero:\n");
	scanf("%f",&b);
	c = a+b;
	d = a-b;
	e = a*b;
	f = a/b;
	g = a%b;
	printf("La suma es: %f\n",c);
	printf("La resta es: %f\n",d);
	printf("El producto es: %f\n",e);
	printf("El cociente es: %f\n",f);
	printf("El modulo es: %f\n",g);
	return 0;
}
