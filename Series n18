#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#include "math.h"

using namespace std;

void main()
{
	float n, x, i, s;
	cout<<"Ingrese un numero entero:"<<endl;
	cin>>x;
	cout<<"Ingrese cuantas veces quiere elevar el numero:"<<endl;
	cin>>n;
	s=0;
	for(i=1;i<=n;i++)
		s=s + pow (x,i);
    cout<<"El numero es:"<<s<<endl;
	getch ();
}
