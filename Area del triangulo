Proceso Calculo_del_area_del_triangulo
	Escribir "Ingrese el valor de la base"
	Leer B
	Escribir "Ingrese el valor de la altura"
	Leer H
	A<-((B*H)/2)
	Escribir "El valor del area es:",A
FinProceso

