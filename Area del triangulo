#include"stdafx.h"
#include"conio.h"
#include <iostream>
using namespace std;

int main() {
	float a;
	float b;
	float h;
	cout << "Ingrese el valor de la base" << endl;
	cin >> b;
	cout << "Ingrese el valor de la altura" << endl;
	cin >> h;
	a = ((b*h)/2);
	cout << "El valor del area es:" << a << endl;
	return 0;
}
